{
  "name": "link-analyzer",
  "version": "0.1.0",
  "description": "Analyze links in your (geo)data catalogs",
  "scripts": {
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "yarn lint",
    "start": "node server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inspireteam/link-analyzer.git"
  },
  "keywords": [
    "links",
    "analyzer",
    "http",
    "data",
    "catalogue",
    "inspire",
    "ogc"
  ],
  "author": "Jérôme Desboeufs <jerome.desboeufs@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inspireteam/link-analyzer/issues"
  },
  "homepage": "https://github.com/inspireteam/link-analyzer#readme",
  "dependencies": {
    "bluebird": "^3.4.1",
    "body-parser": "^1.15.2",
    "content-disposition": "^0.5.0",
    "cors": "^2.7.1",
    "debug": "^2.2.0",
    "execa": "^0.8.0",
    "express": "^4.14.0",
    "findit": "^2.0.0",
    "got": "^7.1.0",
    "hasha": "^3.0.0",
    "kue": "^0.11.6",
    "lodash": "^4.13.1",
    "mississippi": "^1.3.0",
    "mongoose": "^4.4.6",
    "morgan": "^1.7.0",
    "nconf": "^0.8.4",
    "redis": "^2.6.2",
    "redlock": "^2.0.1",
    "rimraf": "^2.4.2",
    "through2": "^2.0.0",
    "urijs": "^1.16.1"
  },
  "devDependencies": {
    "xo": "^0.18.2"
  },
  "engines": {
    "node": ">= 6.0"
  },
  "xo": {
    "space": 2,
    "semicolon": false,
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "curly": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "import/no-unassigned-import": "off",
      "padded-blocks": "off",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2
        }
      ],
      "capitalized-comments": "off",
      "no-use-extend-native/no-use-extend-native": "off"
    }
  }
}
